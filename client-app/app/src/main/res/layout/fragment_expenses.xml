<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left|top">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="ID"
            android:id="@+id/textViewId"
            android:layout_marginTop="19dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextId"
            android:layout_alignTop="@+id/textViewId"
            android:layout_toRightOf="@+id/textViewId"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Date"
            android:id="@+id/textViewDate"
            android:layout_below="@+id/editTextId"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/editTextDate"
            android:layout_below="@+id/editTextId"
            android:layout_toRightOf="@+id/textViewDate" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Description"
            android:id="@+id/textViewDesc"
            android:layout_below="@+id/editTextDate"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextDesc"
            android:layout_below="@+id/editTextDate"
            android:layout_toRightOf="@+id/textViewDesc"
            android:layout_alignRight="@+id/editTextDate"
            android:layout_alignEnd="@+id/editTextDate" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Category"
            android:id="@+id/textViewCat"
            android:layout_below="@+id/editTextDesc"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextCat"
            android:layout_below="@+id/editTextDesc"
            android:layout_alignRight="@+id/editTextDesc"
            android:layout_alignEnd="@+id/editTextDesc"
            android:layout_toRightOf="@+id/textViewCat"
            android:layout_toEndOf="@+id/textViewCat" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Amount"
            android:id="@+id/textViewAmount"
            android:layout_below="@+id/editTextCat"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextAmount"
            android:layout_below="@+id/editTextCat"
            android:layout_alignRight="@+id/editTextCat"
            android:layout_alignEnd="@+id/editTextCat"
            android:layout_toRightOf="@+id/textViewAmount"
            android:layout_toEndOf="@+id/textViewAmount" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Data"
            android:id="@+id/button_add"
            android:layout_below="@+id/editTextAmount"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/editTextAmount"
            android:layout_alignEnd="@+id/editTextAmount" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Data"
            android:id="@+id/button_view"
            android:layout_below="@+id/button_add"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/button_add"
            android:layout_alignEnd="@+id/button_add" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Data"
            android:id="@+id/button_update"
            android:layout_below="@+id/button_view"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/button_view"
            android:layout_alignEnd="@+id/button_view" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete Data"
            android:id="@+id/button_delete"
            android:layout_below="@+id/button_update"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/button_update"
            android:layout_alignEnd="@+id/button_update" />
    </RelativeLayout>

    </ScrollView>

</FrameLayout>